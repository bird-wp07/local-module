{
    "name": "@bird-wp07/local-module",
    "version": "0.0.18",
    "license": "",
    "bin": "./bin/start",
    "files": [
        "bin/",
        "dist/",
        "package.json",
        "README.md"
    ],
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "scripts": {
        "test": "npm run test:build && scripts/run_tests.sh",
        "test:debug": "npm run test:build && NODE_OPTIONS=--inspect-brk scripts/run_tests.sh",
        "test:all": "npm run test:build && npx mocha 'dist-test/**/*.test.js'",
        "test:build": "npm run test:clean && npm run build:tsoa && npm run build:version.ts && npx tsc -p ./tests/tsconfig.json",
        "test:all:debug": "npm run test:build && NODE_OPTIONS=--inspect-brk npx mocha --timeout 9999999",
        "test:clean": "rm -rf ./dist-test ./generated ./src/version.ts",
        "build:version.ts": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
        "build:tsoa": "npx tsoa spec-and-routes",
        "build": "npm run clean && npm run build:version.ts && npm run build:tsoa && npx tsc -p ./tsconfig.json",
        "start": "npm run build && node ./dist/src/main.js",
        "start:debug": "npm run build && NOTE_OPTIONS=--inspect-brk node ./dist/src/main.js",
        "lint": "npx eslint 'src/**/*.ts' 'tests/**/*.ts'",
        "clean": "rm -rf ./dist ./generated ./src/version.ts"
    },
    "dependencies": {
        "@types/node": "^18.11.9",
        "axios": "~1.1.3",
        "express": "^4.18.2",
        "neverthrow": "^5.1.0",
        "swagger-ui-express": "^4.6.0",
        "tsoa": "^4.1.3",
        "typescript": "^4.9.3",
        "winston": "^3.8.2",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@js-soft/eslint-config-ts": "^1.6.1",
        "@types/chai": "^4.3.4",
        "@types/express": "^4.17.14",
        "@types/mocha": "^10.0.0",
        "@types/multer": "^1.4.7",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/xml2js": "^0.4.11",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "chai": "^4.3.6",
        "enhanced-publish": "^1.1.1",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-neverthrow": "^1.1.4",
        "eslint-plugin-prettier": "^4.2.1",
        "mocha": "^10.1.0",
        "prettier": "^2.8.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4",
        "typescript-eslint": "^0.0.1-alpha.0"
    }
}
