{
    "name": "@bird-wp07/local-module",
    "version": "0.0.18",
    "license": "",
    "bin": "./bin/start",
    "files": [
        "bin/",
        "dist/",
        "package.json",
        "README.md"
    ],
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "scripts": {
        "test": "npm run test:clean && npm run test:build && npx mocha --timeout 3000 './dist-test/tests/**/*.test.js'",
        "test:build": "npx tsc -p ./tests/tsconfig.json",
        "test:debug": "npm run test:clean && npm run test:build && NODE_OPTIONS=--inspect-brk npx mocha --timeout 9999999 './dist-test/tests/**/*.test.js'",
        "test:clean": "rm -rf ./dist-test",
        "build": "npx tsc -p ./tsconfig.json",
        "start": "node ./dist/main.js",
        "clean": "rm -rf ./dist",
        "pub": "npm run clean && npm run build && npm publish"
    },
    "dependencies": {
        "@types/express": "^4.17.14",
        "@types/node": "^18.11.9",
        "axios": "~1.1.3",
        "express": "^4.18.2",
        "neverthrow": "^5.1.0",
        "typescript": "^4.9.3",
        "winston": "^3.8.2"
    },
    "prettier": {
        "endOfLine": "lf",
        "printWidth": 180,
        "tabWidth": 4,
        "trailingComma": "none",
        "semi": false,
        "arrowParens": "always",
        "overrides": [
            {
                "files": [
                    "*.yml"
                ],
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "eslintConfig": {
        "ignorePatterns": [
            "/*",
            "!/src",
            "!/test"
        ],
        "parserOptions": {
            "project": [
                "./tsconfig.json",
                "./test/tsconfig.json"
            ]
        }
    },
    "devDependencies": {
        "@types/chai": "^4.3.4",
        "@types/mocha": "^10.0.0",
        "chai": "^4.3.7",
        "enhanced-publish": "^1.1.1",
        "mocha": "^10.1.0"
    }
}
